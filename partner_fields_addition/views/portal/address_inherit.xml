<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_website_sale_address_inherit" inherit_id="website_sale.address">

        <xpath expr="//div[@class='row'][1]/t[4]" position="replace">
            <t t-if="'zip' in zip_city and zip_city.index('zip') &gt; zip_city.index('city')">
                <div t-attf-class="mb-3 #{error.get('zip') and 'o_has_error' or ''} col-md-4 div_zip">
                    <label style="display: none !important;" class="col-form-label label-optional" for="zip">Zip Code</label>
                    <input style="display: none !important;" type="text" name="zip" t-attf-class="form-control #{error.get('zip') and 'is-invalid' or ''}" t-att-value="'0000'" />
                </div>
            </t>
        </xpath>

        <xpath expr="//form[@class='checkout_autoformat'][1]/div[@class='row'][1]/div[1]" position="after">
            <!-- Add new fields here -->
            <div t-attf-class="mb-3 col-lg-12 div_father_name">
                <label class="col-form-label label-optional" for="street2">Father Name</label>
                <input type="text" name="father_name" placeholder="Father Name" t-attf-class="form-control" t-att-value="'father_name' in checkout and checkout['father_name']" />
            </div>
            <div t-attf-class="mb-3 col-lg-12 mother_name">
                <label class="col-form-label label-optional" for="street2">Mother Name</label>
                <input type="text" name="mother_name" placeholder="Mother Name" t-attf-class="form-control" t-att-value="'mother_name' in checkout and checkout['mother_name']" />
            </div>
            
            <div t-attf-class="mb-3 col-lg-12 student_name">
                <label class="col-form-label label-optional" for="street2">Student Name</label>
                <input type="text" name="student_name" placeholder="Student Name" t-attf-class="form-control" t-att-value="'student_name' in checkout and checkout['student_name']" />
            </div>
            <!-- <input type="text" name="father_name" placeholder="Father's Name"/>
            <input type="text" name="mother_name" placeholder="Mother's Name"/>
            <input type="text" name="student_name" placeholder="Student's Name"/> -->
        </xpath>
    </template>
</odoo>
